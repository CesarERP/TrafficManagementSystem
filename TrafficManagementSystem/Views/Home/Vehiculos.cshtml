@model IEnumerable<TrafficManagementSystem.Vehiculo>

@{
    ViewData["Title"] = "Vehículos";
}

<h2>Vehículos</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Placa</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Año</th>
            <th>Color</th>
            <th>Propietario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehiculo in Model)
        {
            <tr>
                <td>@vehiculo.IDVehiculo</td>
                <td>@vehiculo.Placa</td>
                <td>@vehiculo.Marca</td>
                <td>@vehiculo.Modelo</td>
                <td>@vehiculo.Año</td>
                <td>@vehiculo.Color</td>
                <td>@vehiculo.Propietario</td>
                <td>
                    <a asp-controller="Home" asp-action="EditVehiculo" asp-route-id="@vehiculo.IDVehiculo">Editar</a> |
                    <a asp-controller="Home" asp-action="DeleteVehiculo" asp-route-id="@vehiculo.IDVehiculo">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Home" asp-action="CreateVehiculo">Añadir Vehículo</a>
